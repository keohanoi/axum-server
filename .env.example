DATABASE_URL=postgres://username:password@localhost/todos
SERVER_HOST=127.0.0.1
SERVER_PORT=3000
RUST_LOG=info

# Kafka configuration
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=axum-server
KAFKA_GROUP_ID=axum-server-group
KAFKA_TOPIC_PREFIX=axum-server
KAFKA_TODO_EVENTS_TOPIC=todo-events
KAFKA_USER_EVENTS_TOPIC=user-events
